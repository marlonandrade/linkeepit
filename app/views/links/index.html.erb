<h1>All Links</h1>

<%= render 'form', link: @new_link %>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td>
          <%= link_to link.url, link.url, target: '_blank' %>
        </td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
